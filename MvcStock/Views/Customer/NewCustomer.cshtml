@model MvcStock.Models.Entity.TblCustomer
@{
    ViewBag.Title = "NewCustomer";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post" class=" form-group">
    <div>
        <label>Customer Name</label>
        @Html.TextBoxFor(m => m.customerName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.customerName, "", new { @style = "color:green" })
        
    </div>
    <br />
    <div>
        <label>Customer Surname</label>
        <input type="text" class="form-control" name="CustomerSurname" />
    </div>
    <div style="margin-top:15px">
       <button class="btn btn-info" id="btn1">Add to Customer </button> 
    </div>
    <script>

        $('#btn1').click(function () {
            alert('Added Customer..');
        });
    </script>
</form>

